<?xml version="1.0" encoding="UTF-8" ?>

<!-- Bombardier CRJ700 series -->
<!-- Multi-function display -->

<PropertyList>

	<path>ND_L.ac</path>

	<animation>
		<name>Screen</name>
		<object-name>ND.infoScreenL</object-name>
		<object-name>ND.screenL</object-name>
	</animation>

	<animation>
		<type>select</type>
		<object-name>Power.off</object-name>
		<condition>
			<less-than>
				<property>systems/DC/outputs/mfd1</property>
				<value>15</value>
			</less-than>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>Screen</object-name>
		<condition>
			<greater-than>
				<property>systems/DC/outputs/mfd1</property>
				<value>15</value>
			</greater-than>
		</condition>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>ND.screenL</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>CRJ700.showNd();</script>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>LeftControl</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/mfd/page</property>
				<step>-1</step>
				<min>1</min>
			</binding>
			<binding>
				<command>nasal</command>
				<script>CRJ700.setDisplayMode("instrumentation/efis/", getprop("instrumentation/mfd/page"))</script>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>RightControl</object-name>
		<visible>true</visible>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/mfd/page</property>
				<step>1</step>
				<max>6</max>
			</binding>
			<binding>
				<command>nasal</command>
				<script>CRJ700.setDisplayMode("instrumentation/efis/", getprop("instrumentation/mfd/page"))</script>
			</binding>
		</action>
	</animation>

		<!-- Lightmaps -->
	<effect>
		<inherits-from>Aircraft/CRJ700-family/Models/Effects/CRJ700lightmap</inherits-from>
		<parameters>
			<lightmap-factor-prop>sim/model/lights/panel-lightmap</lightmap-factor-prop>
			<lightmap-factor n="0">
				<use alias="../../lightmap-factor-prop" />
			</lightmap-factor>
			<lightmap-factor n="1">
				<use alias="../../lightmap-factor-prop" />
			</lightmap-factor>
			<lightmap-factor n="2">
				<use alias="../../lightmap-factor-prop" />
			</lightmap-factor>
			<texture n="3">
				<image>Aircraft/Generic/generic-lightmap.png</image>
			</texture>
		</parameters>
		<object-name>Border</object-name>
	</effect>
</PropertyList>
